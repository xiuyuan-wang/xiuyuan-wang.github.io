// 通过检查，查看元素样式声明
.dark .content__default code {
    background-color: rgba(58,58,92,0.7);
    color: #fff;
}

.page .page-title,.page .page-edit {
   display: none;
}

.abstract-item .reco-date{
   display: none !important;  
}

.home .hero img{
   border-radius: 50%;
   background-color: #d9dce0;
}
.home .hero #main-title{
   -webkit-text-fill-color: transparent;
    -webkit-background-clip: text;
    -webkit-background-size: 200% 100%;
    font-size: 3rem;
    color: #2c3e50;
   background-image: -webkit-linear-gradient(left,#eee,#333 25%,#eee 50%,#333 75%,#eee);
   animation: myGradientChange 4s linear infinite;
}
.home .hero .description{
   color: #2c3e50;
   font-weight: 200;
}
.theme-container .home .hero .action-button{
   padding: 0.8rem 1.6rem;
    background: #474644;
    color: #fff;
    border-radius: 15px;
    border-bottom: 5px solid #33322f;
    border-left: 3px solid #000;
    box-shadow: -3px 5px 10px 3px rgb(51 50 47 / 50%), inset 5px -5px 20px 10px rgb(51 50 47 / 50%), 0 2px 1px rgb(0 0 0 / 70%);
    -webkit-transition: -webkit-box-shadow .15s ease-in-out;
}
.theme-container .home .hero .action-button:hover{
   background-color:#000;
}
 @keyframes myGradientChange {
      0% {
         background-position: 0 0;
      }
      100% {
        background-position: -100% 0;
      }
    }
